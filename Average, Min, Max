x = 0
c = 0
sum = 0
min = 9999999
max = 0
while (x != -1):
    x = int(input("Please enter a positive integer, enter -1 to stop"))
    if (x >= 0):
        sum = sum + x
        c = c + 1
        if (x<min):
            min = x
        if (x>max):
            max = x
    
print(sum/c)
print(min)
print(max)
